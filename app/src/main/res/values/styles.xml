<resources>

    <!-- Base application theme. -->
    style

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryHome</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHome</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/gray</item>

    </style>


    <style name="AppTheme.Launcher.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.Launcher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
