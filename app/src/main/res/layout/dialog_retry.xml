<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp"
        android:foreground="@drawable/ripple_effect_dark">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noconnection_image"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não foi possível conectar-se ao servidor. Verifique sua conexão e tente novamente."
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/dismiss_tryagain_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_button"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Cancelar"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_button"
            android:padding="12dp"
            android:id="@+id/tryagain_btn"
            android:layout_toRightOf="@id/dismiss_tryagain_btn"
            android:layout_weight="1"
            android:gravity="center"
            android:foreground="@drawable/ripple_effect_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentar Novamente"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tryagain"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>